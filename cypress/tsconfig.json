{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "types": ["cypress", "node", "@testing-library/cypress"],
    "isolatedModules": false,
    "noEmit": true,
    "composite": true,
    "jsx": "react-jsx",
    "strict": true
  },
  "include": [
    "src/**/*.ts",
  "src/**/*.tsx",
  "src/**/*.js",
  "src/**/*.jsx",
  "cypress/**/*.ts",
  "cypress/**/*.tsx",
  "cypress/**/*.js",
  "cypress/**/*.jsx",
  "cypress/**/*.json",
  ]
}